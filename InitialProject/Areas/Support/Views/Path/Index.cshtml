@model BaseResponse
<body>
    <div class="container mt-4">
        @if (Model.Status)
        {
            var paths = Model.Data as List<Paths>;
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <form asp-action="Create" method="get" asp-controller="Path" class="p-2">
                        <button type="submit" class="btn btn-success">Create Path</button>
                    </form>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in paths)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <form method="get" asp-action="Edit" asp-controller="Path" class="p-2">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-primary">Edit</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" asp-action="Delete" asp-controller="Path" class="p-2">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                Error: @Model.ErrorMessage
            </div>
        }
    </div>
</body>
