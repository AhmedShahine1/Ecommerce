@model BaseResponse


<hr />
@{
    var paths = Model.Data as Paths;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@paths.Id" />
            <div class="form-group">
                <label asp-for="@paths.Name" class="control-label"></label>
                <input asp-for="@paths.Name" class="form-control" />
                <span asp-validation-for="@paths.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@paths.Description" class="control-label"></label>
                <input asp-for="@paths.Description" class="form-control" />
                <span asp-validation-for="@paths.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<form>
    <button type="submit" class="btn btn-primary" asp-action="Index">Back to List</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
